package entidades;

import java.util.ArrayList;

import javax.swing.table.AbstractTableModel;

public class ModeloTabela extends AbstractTableModel {

	private ArrayList linha;
	private String colunas = null;

	public ModeloTabela(ArrayList linha, String colunas) {
		super();
		this.linha = linha;
		this.colunas = colunas;
	}

	public ArrayList getLinha() {
		return linha;
	}

	public void setLinha(ArrayList linha) {
		this.linha = linha;
	}

	public String getColunas() {
		return colunas;
	}

	public void setColunas(String colunas) {
		this.colunas = colunas;
	}

	public int getColumCount() {

		return colunas.length();
	}

	public int getRowCount() {

		return linha.size();
	}
	
	public String getColumName(int numCol){
		
		return colunas[numCol];
		
	}
	
	public Object getValueat(int numLin, int numCol){
		
		Object[] linha = (Object[])getLinha().get(numLin);
		
		return linha[numCol];
		
	}
	

}
