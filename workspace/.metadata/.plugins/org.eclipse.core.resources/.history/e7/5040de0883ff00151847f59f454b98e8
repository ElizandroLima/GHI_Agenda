/**
 * 
 */
package conexao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import javax.swing.JOptionPane;

/**
 * @author Elima
 *
 */
public class DaoHelper {
	
	public static DaoHelper instance; // Singleton

	/**
	 * Fornecer conexao ao banco de dados 
	 * @return
	 * @throws SQLException
	 */
	public Connection getConnection() throws SQLException {

		Connection conn = null;

		String url = "jdbc:mysql://localhost:3306/sisfac";
		String driver = "com.mysql.jdbc.Driver";
		String usuario = "root";
		String senha = "root";

		String message = "Driver não encontrado!";
		String message2 = "Login ou senha da DB incorretos!";

		try {
			Class.forName(driver);// driver
			System.out.println("Driver, ok!");
			conn = DriverManager.getConnection(url, usuario, senha);// url
			System.out.println("Connection, ok!");

		} catch (ClassNotFoundException e) {
			JOptionPane.showMessageDialog(null, message);
			JOptionPane.showMessageDialog(null, message2);
			e.printStackTrace();
		}

		return conn;

	}
	
	/**
	 * @author Elima
	 * @metodo: Cria uma instancia de conexao
	 * Singleton: permite verificar se já existe uma instancia aberta, se tiver nusa, senão cria uma nova
	 * synchronized: permite que se tiver varias instancias ao mesmo tempo ele cria uma lista de espera
	 * ou seja, se um está conectando, os outros esperem sua vez!
	 * @return instance
	 */
	public synchronized static DaoHelper saberEstado(){
		if (instance == null) {
			instance = new DaoHelper();
		}
		return instance;
	}
	
	
	
}
