    private void limparTela() {
        jTextFieldNome.setText("");
        jTextFieldTelefone.setText("");
        jTextFieldEmail.setText("");
        jTextFieldCPF.setText("");
        jTextFieldRG.setText("");
        jTextFieldSexo.setText("");
        jTextFieldIdade.setText("");
    }
