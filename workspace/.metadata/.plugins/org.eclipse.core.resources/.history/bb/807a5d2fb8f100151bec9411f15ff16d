    private void jButtonSalvarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonSalvarActionPerformed

    String umNome = jTextFieldNome.getText();
    String umTelefone = jTextFieldTelefone.getText();
    
    Pessoa umaPessoa = new Pessoa(umNome, umTelefone);
    
    String umaIdade = jTextFieldIdade.getText();
    umaPessoa.setIdade(umaIdade);
    
    String umCpf = jTextFieldCPF.getText();
    umaPessoa.setCpf(umCpf);
    
    String umRg = jTextFieldRG.getText();
    umaPessoa.setRg(umRg);
    
    String umSexo = jTextFieldSexo.getText();
    umaPessoa.setSexo(umSexo);
    
    String umEmail = jTextFieldEmail.getText();
    umaPessoa.setEmail(umEmail);
   
    umControlePessoa.adicionar(umaPessoa);
    limparTela ();
    
    String mensagem = "Contato adicionado!";
    JOptionPane.showMessageDialog(null, mensagem);
    }

    private void jButtonPesquisarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonPesquisarActionPerformed
        String nome = jTextFieldPesquisar.getText();
        Pessoa umaPessoa = umControlePessoa.pesquisar(nome);

        if (umaPessoa == null) {
            String mensagem = "Contato não existe";
            JOptionPane.showMessageDialog(null, mensagem);
        } else {
            nome = "Nome: " + umaPessoa.getNome();
            String telefone = "\nTelefone: " + umaPessoa.getTelefone();
            String idade = "\nIdade: " + umaPessoa.getIdade();
            String sexo = umaPessoa.getSexo();
            String s = "\nSexo: " +sexo;
            String rg = "\nRG: " + umaPessoa.getRg();
            String cpf = "\nCPF: " + umaPessoa.getCpf();
            String email = "\nEmail: " + umaPessoa.getEmail();
            JOptionPane.showMessageDialog(null, nome + telefone + idade + s + rg + cpf + email);
        }
    }

    private void jButtonRemoverActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonRemoverActionPerformed
        String nome = jTextFieldRemover.getText();
        Pessoa umaPessoa = umControlePessoa.pesquisar(nome);
        
        if (umaPessoa == null) {
            String mensagem = "Contato não existe.";
            JOptionPane.showMessageDialog(null, mensagem);
        } else {
        umControlePessoa.remover(umaPessoa);
        String mensagem = "Contato removido com sucesso!";
        JOptionPane.showMessageDialog(null, mensagem);
        }
    }

